<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitle</item>
        <item name="background">@color/colorPrimary</item>
        <!-- icono back temporal -->
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blueMain</item>
        <!--<item name="android:textAlignment">center</item>-->
        <!--item name="android:textSize">12sp</item-->
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
